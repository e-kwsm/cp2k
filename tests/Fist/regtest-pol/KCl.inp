&GLOBAL
 RUN_TYPE MD
 PROJECT_NAME KCl
 PRINT_LEVEL medium
&END GLOBAL

&MOTION
 &MD
  ENSEMBLE  NPT_I
  STEPS 10
  TIMESTEP 1.0
  TEMPERATURE 1070
  &THERMOSTAT
   TYPE NOSE
   &NOSE
    TIMECON 100
   &END NOSE
  &END THERMOSTAT
  &BAROSTAT
   PRESSURE 1.01325
   TIMECON 100
  &END BAROSTAT
 &END MD
 &PRINT
  &TRAJECTORY
   &EACH
    MD 5
   &END EACH
  &END TRAJECTORY
  &CELL
   &EACH
    MD 5
   &END EACH
  &END CELL
  &VELOCITIES
   &EACH
    MD 5
   &END EACH
  &END VELOCITIES
  &FORCES
   &EACH
    MD 5
   &END EACH
  &END FORCES
  &STRESS
   &EACH
    MD 5
   &END EACH
  &END STRESS
  &RESTART on
   &EACH
    MD 5
   &END EACH
  &END RESTART
  &RESTART_HISTORY
   &EACH
    MD 5
   &END EACH
  &END RESTART_HISTORY
 &END PRINT
&END MOTION

&FORCE_EVAL
 STRESS_TENSOR ANALYTICAL
 METHOD FIST
 &MM
  &FORCEFIELD
   &SPLINE
    R0_NB 0.1
    EMAX_SPLINE 1.0E5
   &END SPLINE
   &NONBONDED
    &BMHFTD
     ATOMS Cl Cl
     A 100.0
     B 2.89128
     C 4.88053
     D 45.84421
     BD 3.21254
     RCUT 10.0
    &END BMHFTD
    &BMHFTD
     ATOMS Cl K
     A 57.7
     B 2.92907
     C 1.10101
     D 1.67438
     BD 2.83459 2.83459
     RCUT 10.0
    &END BMHFTD
    &BMHFTD
     ATOMS K K
     A 54.5
     B 2.94797
     C 0.55731
     D 0.55731
     BD 2.83459 1.2
     RCUT 10.0
    &END BMHFTD
   &END NONBONDED
   &DIPOLE
    APOL 2.96369
    ATOM Cl
    &DAMPING
     ATOM K
     BIJ 2.759
     ORDER 4
     CIJ 2.8
    &END DAMPING
   &END DIPOLE
   &CHARGE
    ATOM Cl
    CHARGE -1.0
   &END CHARGE
   &CHARGE
    ATOM K
    CHARGE 1.0
   &END CHARGE
  &END FORCEFIELD
  &POISSON
   &EWALD
    EWALD_TYPE ewald
    ALPHA 0.35
    GMAX 23
    O_SPLINE 6
    &MULTIPOLES
     MAX_MULTIPOLE_EXPANSION dipole
     POL_SCF conjugate_gradient
     EPS_POL 1.0E-6
     MAX_IPOL_ITER 100
    &END MULTIPOLES
   &END EWALD
  &END POISSON
 &END MM
 &SUBSYS
  &TOPOLOGY
   COORD_FILE_FORMAT xyz
   COORD_FILE_NAME KCl.xyz
  &END TOPOLOGY
  &CELL
   ABC 21.744 21.744 21.744
  &END CELL
  &KIND K
   ELEMENT K
   MASS 39.098
  &END KIND
  &KIND Cl
   ELEMENT Cl
   MASS 35.453
  &END KIND
 &END SUBSYS
&END FORCE_EVAL
