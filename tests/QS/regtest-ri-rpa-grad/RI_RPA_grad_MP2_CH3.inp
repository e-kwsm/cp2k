&GLOBAL
  PROJECT  RI_RPA_grad_MP2_CH3
  PRINT_LEVEL MEDIUM
  RUN_TYPE GEO_OPT
#  RUN_TYPE ENERGY_FORCE
  &TIMINGS
     THRESHOLD 0.01
  &END
&END GLOBAL
&MOTION
  &GEO_OPT
    MAX_ITER  1
  &END
&END MOTION
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  HFX_BASIS
    POTENTIAL_FILE_NAME  POTENTIAL
    &MGRID
      CUTOFF  100
      REL_CUTOFF  20
    &END MGRID
    &POISSON
      PERIODIC XYZ
      POISSON_SOLVER WAVELET
    &END POISSON
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-5
      MAX_SCF 100
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &WF_CORRELATION
        &RI_RPA
          MINIMAX
          QUADRATURE_POINTS  4
        &END
        &INTEGRALS
          &WFC_GPW
            CUTOFF  50
            REL_CUTOFF 20
          &END WFC_GPW
          ERI_METHOD GPW
        &END INTEGRALS
        MEMORY  500.0
        NUMBER_PROC  1
      &END
    &END XC
    UKS
    MULTIPLICITY  2
  &END DFT
  &SUBSYS
    &CELL
      ABC [angstrom]  4.0 4.0 4.0
      PERIODIC XYZ
    &END CELL
    &KIND H
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q1
    &END KIND
    &KIND C
      BASIS_SET  DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-GTH
      POTENTIAL  GTH-HF-q4
    &END KIND
    &TOPOLOGY
      COORD_FILE_NAME  CH3.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
  &END SUBSYS
&END FORCE_EVAL
