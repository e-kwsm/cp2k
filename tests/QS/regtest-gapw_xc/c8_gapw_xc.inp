&GLOBAL
  PROJECT  c8_gapw_xc
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY_FORCE
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &PRINT
    &FORCES ON
    &END
  &END
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      METHOD GAPW_XC
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      MAX_SCF   50
      EPS_SCF 1.0e-4
      &SMEAR
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE   500.
      &END
      &MIXING
          GMIX_P
      &END
      ADDED_MOS   20 
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
       ABC   5.42858871335 5.42858871335 5.42858871335
    &END CELL

    &KIND  C
      BASIS_SET  DZVP-GTH-PADE
      POTENTIAL  GTH-PADE-q4
    &END

    &TOPOLOGY
      COORD_FILE_NAME ../sample_xyz/C_8.xyz
      COORDINATE XYZ
      CONNECTIVITY OFF
    &END TOPOLOGY

  &END SUBSYS
&END FORCE_EVAL

